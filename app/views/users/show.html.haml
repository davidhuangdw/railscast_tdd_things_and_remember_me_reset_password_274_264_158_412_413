.page-header
  = link_to users_path, :class => 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_user_path(@user), :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  = link_to new_password_reset_path, :class => 'btn btn-primary' do
    Reset Password
  %h1 Show user

%dl.dl-horizontal
  %dt Email:
  %dd= @user.email
  %dt Password digest:
  %dd= @user.password_digest
